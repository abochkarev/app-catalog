{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["applications"],
    "properties": {
        "applications": {
            "type": "array",
            "items": {
                "type": "object",
		"required": ["package_name", "application_name", "provided_by", "description", "release", "format", "supported_by", "license"],
                "additionalProperties": true,
                "properties": {
                    "package_name": {
                        "type": "string",
                        "pattern": "^[a-z][a-z\\d-]+(\\.[a-z\\d-]+)*$"
                    },
                    "application_name": {
                        "type": "string"
                    },
                    "provided_by": {
                        "type": "object",
			"required": ["name", "href", "company"],
			"additionalProperties": false,
			"properties": {
			    "name": {
				"type": "string"
			    },
			    "href": {
				"type": "string"
			    },
			    "company": {
				"type": "string"
			    }
			}
                    },
                    "description": {
                        "type": "string"
                    },
                    "release": {
                        "type": "array",
                        "items": {
			    "enum": [ "Austin", "Bexar", "Cactus", "Diablo", "Essex", "Folsom", "Grizzly", "Havana", "Icehouse", "Juno", "Kilo", "Liberty" ]
                        },
                        "minItems": 1
                    },
                    "format": {
                        "enum": ["package", "bundle"]
                    },
                    "supported_by": {
                        "type": "string"
                    },
                    "license": {
                        "type": "string"
                    },
                    "attributes": {
                        "type": "object",
			"additionalProperties": true,
			"patternProperties": {
			    ".*": {
				"type": [ "string", "number", "boolean", "null" ]
			    }
			}
		    }
                }
            }
        }
    }
}
